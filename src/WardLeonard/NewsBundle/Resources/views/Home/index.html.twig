{% extends '::base.html.twig' %}
{% block section %}
    {% for new in news %}
        <article>
            <h2>
                {{ new.title }}
            </h2>
            <p>{{ new.content }}<img src="{{ asset('News/images/'~ new.photo)  }}" alt=""></p>
            <iframe width="560" height="315" src="https://www.youtube.com/embed/{{ new.video }}" frameborder="0" allowfullscreen></iframe>
            <p><small>{{ new.datepublication |  date('d/m/Y')}}</small></p>
        </article>
    {% endfor %}
{%  endblock %}
